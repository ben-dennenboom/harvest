#!/usr/bin/env php
<?php

$possibleFiles = [
    __DIR__.'/../vendor/autoload.php',           // package itself
    __DIR__.'/../../../autoload.php',            // globally installed
    __DIR__.'/../../../../../../vendor/autoload.php', // dependency in another project
];

$file = null;
foreach ($possibleFiles as $possibleFile) {
    if (file_exists($possibleFile)) {
        $file = $possibleFile;
        break;
    }
}

if (null === $file) {
    throw new RuntimeException('Unable to locate autoload.php file.');
}

require_once $file;

use Dennenboom\Harvest\HarvestManager;

$harvest = new HarvestManager();
$harvest->run();
